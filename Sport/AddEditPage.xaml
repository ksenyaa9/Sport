<Page x:Class="Sport.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sport"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление"  FontFamily="Cascadia Code SemiLight">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition />
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Фамилия" Grid.Row="0" VerticalAlignment="Center" Margin="5"/>
        <TextBlock Text="Имя" Grid.Row="1" VerticalAlignment="Center" Margin="5"/>
        <TextBlock Text="Отчество" Grid.Row="2" VerticalAlignment="Center" Margin="5"/>
        <TextBlock Text="Дата рождения" Grid.Row="3" VerticalAlignment="Center" Margin="5"/>
        <TextBlock Text="Телефон" Grid.Row="4" VerticalAlignment="Center" Margin="5"/>
        <TextBlock Text="Дата регистрации" Grid.Row="5" VerticalAlignment="Center" Margin="5"/>
        <TextBlock Text="Тип подписки" Grid.Row="6" VerticalAlignment="Center" Margin="5"/>

        <TextBox x:Name="TxtLastName" Grid.Column="1" Grid.Row="0" Height="30" Margin="5"/>
        <TextBox x:Name="TxtFirstName" Grid.Column="1" Grid.Row="1" Height="30" Margin="5"/>
        <TextBox x:Name="TxtMiddleName" Grid.Column="1" Grid.Row="2" Height="30" Margin="5"/>

        <!-- DatePicker для даты рождения -->
        <DatePicker x:Name="DpBirthDate" Grid.Column="1" Grid.Row="3" Height="30" Margin="5" 
                   SelectedDateFormat="Short"/>

        <TextBox x:Name="TxtPhone" Grid.Column="1" Grid.Row="4" Height="30" Margin="5"/>

        <!-- DatePicker для даты регистрации -->
        <DatePicker x:Name="DpRegistrationDate" Grid.Column="1" Grid.Row="5" Height="30" Margin="5" 
                   SelectedDateFormat="Short" IsEnabled="False"/>

        <!-- ComboBox для выбора типа подписки -->
        <ComboBox x:Name="CmbSubscriptionType" Grid.Column="1" Grid.Row="6" Height="30" Margin="5"
                  DisplayMemberPath="Name"
                  SelectedValuePath="SubscriptionTypeId"/>

        <!-- Кнопки сохранения/отмены -->
        <StackPanel Grid.Row="8" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="BtnSave" Content="Сохранить" Click="BtnSave_Click"/>
            
        </StackPanel>
    </Grid>
</Page>
